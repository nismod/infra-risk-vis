{
  "version": 8,
  "name": "Hazards",
  "center": [105.12, 16.19],
  "height": "600px",
  "zoom": 5,
  "bearing": 0,
  "pitch": 0,
  "sources": {
    "coastal": { "type": "vector", "url": "mbtiles://{coastal}" },
    "fluvial": { "type": "vector", "url": "mbtiles://{fluvial}" },
    "cyclone": { "type": "vector", "url": "mbtiles://{cyclone}" },
    "boundaries": { "type": "vector", "url": "mbtiles://{boundaries}" }
  },
  "glyphs": "{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#c6e1ff"
      }
    },
    {
      "id": "adminboundaries",
      "type": "fill",
      "source": "boundaries",
      "source-layer": "WB_countries_Admin0",
      "paint": {
        "fill-color": "#d2d2d2",
        "fill-outline-color": "#fff"
      }
    },
    {
      "id": "disputedareas",
      "type": "fill",
      "source": "boundaries",
      "source-layer": "WB_Admin0_disputed_areas",
      "paint": {
        "fill-color": "#e0e0e0",
        "fill-outline-color": "#fff"
      }
    },
    {
      "id": "cyclone",
      "type": "fill",
      "source": "cyclone",
      "source-layer": "cyclone",
      "paint": {
        "fill-color": [
          "interpolate",
          ["linear"],
          ["get", "gust_speed_ms-1"],
          0,
          ["to-color", "rgba(255, 255, 255, 0)"],
          20,
          ["to-color", "#f9d5cb"],
          50,
          ["to-color", "#d44118"]
        ],
        "fill-outline-color": "rgba(0,0,0,0)"
      }
    },
    {
      "id": "country_outlines",
      "type": "fill",
      "source": "boundaries",
      "source-layer": "WB_countries_Admin0",
      "paint": {
        "fill-color": "transparent",
        "fill-outline-color": "#fff"
      }
    },
    {
      "id": "fluvial",
      "type": "circle",
      "source": "fluvial",
      "source-layer": "fluvial",
      "paint": {
        "circle-color": [
          "interpolate",
          ["linear"],
          ["get", "depth_m"],
          0,
          ["to-color", "#58cced"],
          5,
          ["to-color", "#072f5f"]
        ],
        "circle-radius": [
          "interpolate", ["exponential", 1.5], ["zoom"],
          3, 1,
          10, 5,
          15, 150
        ]
      }
    },
    {
      "id": "coastal",
      "type": "circle",
      "source": "coastal",
      "source-layer": "coastal",
      "paint": {
        "circle-color": [
          "interpolate",
          ["linear"],
          ["get", "depth_m"],
          0,
          ["to-color", "#9df4b0"],
          5,
          ["to-color", "#0b601d"]
        ],
        "circle-radius": [
          "interpolate", ["exponential", 1.5], ["zoom"],
          3, 1,
          10, 5,
          15, 150
        ]
      }
    },
    {
      "id": "country_labels",
      "type": "symbol",
      "source": "boundaries",
      "source-layer": "CNTR_LB_2020_4326",
      "layout": {
        "text-field": "{NAME_ENGL}",
        "symbol-placement": "point"
      },
      "paint": {
        "text-color": "#222",
        "text-halo-color": "#fff",
        "text-halo-width": 2
      }
    }
  ]
}
